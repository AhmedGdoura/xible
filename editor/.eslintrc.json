{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": false,
    "es6": true
  },
  "globals": {
    "xibleWrapper": false,
    "View": false,
    "ViewHolder": false,
    "XibleEditor": false,
    "Chart": false,
    "mainViewHolder": false,
    "XibleEditorFlow": false,
    "XibleEditorNode": false,
    "XibleEditorConnector": false,
    "XibleWrapper": false,
    "XibleEditorNodeSelector": false,
    "EventEmitter": false
  },
  "rules": {
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "comma-dangle": ["error", "never"],
    "no-underscore-dangle": "off",
    "no-mixed-operators": "off",
    "no-multi-assign": "warn",
    "default-case": "off",
    "strict": ["error", "global"],
    "no-console": "off",
    "no-continue": "off",
    "guard-for-in": "off",
    "no-restricted-syntax": ["off"],
    "no-param-reassign": "off",
    "no-use-before-define": ["error", {"functions": false, "classes": false}],
    "indent": ["error", 2, {"MemberExpression": 0, "SwitchCase": 1}]
  },
  "plugins": [
    "import"
  ]
}
